<div class="candidato">
  <h3>Meu perfil</h3>
  
  <fieldset class="float-left">
    <legend>Informações Pessoais</legend>
    <div class="field">
      <b>Nome:</b>
      <%= @candidato.nome %><br />
    </div>
    <div class="field">
      <b>E-mail:</b>
      <%= @candidato.email %><br />
    </div>  
    <div class="field">
      <b>Endereço:</b>
      <%= @candidato.endereco %><br />
    </div>
    <div class="field">
      <b>Cidade:</b>
  <%= @candidato.cidade %>, <%= UF_ADDRESS_TYPES.invert[@candidato.uf.to_s][0..2]%><br />
    </div>
  </fieldset>

  <fieldset>
    <legend>Formação e Experiência</legend>
    <div class="field">
      <b>Curso:</b>
      <%= CURSO_TYPES.invert[@candidato.curso.to_s] %><br />
    </div>
    <div class="field">
      <b>Formação:</b>
      <%= FORMACAO_TYPES.invert[@candidato.formacao.to_s][6..30] %><br />
    </div>
    <div class="field">
      <b>Experiência:</b>
      <%= EXPERIENCIA_TYPES.invert[@candidato.experiencia.to_s] %><br />
    </div>
    <div class="field">
      <b>Pretenção salarial:</b>
      R$ <%= @candidato.pretencao_salarial %><br />
    </div>
  </fieldset>
  
  <%= link_to 'Editar meus dados', edit_candidato_path(@candidato) %>

  <h3>Minhas candidaturas</h3>

</div>