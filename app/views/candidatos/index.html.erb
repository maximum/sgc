<h1>Listar candidatos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Formacao</th>
    <th>Experiencia</th>
    <th>Pretencao salarial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidatos.each do |candidato| %>
  <tr>
    <td><%= candidato.nome %></td>
    <td><%= candidato.endereco %></td>
    <td><%= candidato.formacao %></td>
    <td><%= candidato.experiencia %></td>
    <td><%= candidato.pretencao_salarial %></td>
    <td><%= link_to 'Show', candidato %></td>
    <td><%= link_to 'Edit', edit_candidato_path(candidato) %></td>
    <td><%= link_to 'Destroy', candidato, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

