<%= form_for(@candidato) do |f| %>
  <% if @candidato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidato.errors.count, "erro") %> <%= @candidato.errors.count == 1 ? "evitou" : "evitaram" %> o cadastro do candidato:</h2>

      <ul>
      <% @candidato.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset class="float-left">
  <legend>Informações Pessoais</legend>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.text_field :email %>
  </div>  
  <div class="field">
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :cidade %><br />
    <%= f.text_field :cidade %>
  </div>
  <div class="field">
    <%= f.label :uf, "UF" %><br />
    <%= select :candidato, :uf, UF_ADDRESS_TYPES.sort %>
  </div>
</fieldset>

<fieldset>
  <legend>Formação e Experiência</legend>
  <div class="field">
    <%= f.label :curso %><br />
    <%= select :candidato, :curso, CURSO_TYPES.sort %>
  </div>
  <div class="field">
    <%= f.label :formacao %><br />
    <%= select :candidato, :formacao, FORMACAO_TYPES.sort_by {|k,v| v.to_s } %>
  </div>
  <div class="field">
    <%= f.label :experiencia %><br />
    <%= select :candidato, :experiencia, EXPERIENCIA_TYPES.sort_by {|k,v| v.to_s } %>
  </div>
  <div class="field">
    <%= f.label :pretencao_salarial %><br />
    <%= f.text_field :pretencao_salarial %>
  </div>
</fieldset>

<fieldset class="clear-both">
  <legend>Usuário</legend>
  <%= f.fields_for :user do |user| %>
    <%= render :partial => '/users/fields_for_form', :locals => {:f => user} %>
  <% end %>
</fieldset>
    
  <div class="actions">
    <%= image_submit_tag "buttonsubmit.gif" %>
  </div>
<% end %>
