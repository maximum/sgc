<%= form_for(@candidato) do |f| %>
  <% if @candidato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidato.errors.count, "erro") %> <%= @candidato.errors.count == 1 ? "evitou" : "evitaram" %> o cadastro do candidato:</h2>

      <ul>
      <% @candidato.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :cidade %><br />
    <%= f.text_field :cidade %>
  </div>
  <div class="field">
    <%= f.label :uf, "UF" %><br />
    <%= select(:candidato, :uf, options_for_select(UF_ADDRESS_TYPES.sort)) %>    
  </div>
  <div class="field">
    <%= f.label :curso %><br />
    <%= select(:candidato, :curso, options_for_select(CURSO_TYPES.sort)) %>
  </div>
  <div class="field">
    <%= f.label :formacao %><br />
    <%= select(:candidato, :formacao, options_for_select(FORMACAO_TYPES.sort)) %>
  </div>
  <div class="field">
    <%= f.label :experiencia %><br />
    <%= f.text_area :experiencia %>
  </div>
  <div class="field">
    <%= f.label :pretencao_salarial %><br />
    <%= f.text_field :pretencao_salarial %>
  </div>
  
  <%= f.fields_for :user do |user| %>
    <%= render :partial => '/users/fields_for_form', :locals => {:f => user} %>
  <% end %>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
