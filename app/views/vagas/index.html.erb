<h1>Vagas</h1>

<table>
  <tr>
    <th>Descriacao</th>
    <th>Salario</th>
    <th>Experiencia</th>
    <th>Formacao</th>
    <th>Cargo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vagas.each do |vaga| %>
  <tr>
    <td><%= vaga.descricao %></td>
    <td><%= vaga.salario %></td>
    <td><%= EXPERIENCIA_TYPES.invert[vaga.experiencia.to_s] %></td>
    <td><%= vaga.formacao %></td>
    <td><%= vaga.cargo ? vaga.cargo.descricao : nil %></td>    
    <td><%= link_to 'Show', vaga %></td>
    <td><%= link_to 'Edit', edit_vaga_path(vaga) %></td>
    <td><%= link_to 'Destroy', vaga, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

