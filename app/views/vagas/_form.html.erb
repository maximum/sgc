<%= form_for(@vaga) do |f| %>
  <% if @vaga.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vaga.errors.count, "error") %> prohibited this vaga from being saved:</h2>

      <ul>
      <% @vaga.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </div>
  <div class="field">
    <%= f.label :num_vagas, "Quantidade de vagas" %><br />
    <%= select(:vaga, :num_vagas, (1..99).to_a) %>
  </div>
  <div class="field">
    <%= f.label :uf %><br />
    <%= select :vaga, :uf, UF_ADDRESS_TYPES.sort, {:include_blank => 'Selecione um estado'}%>
  </div>  
  <div class="field">
    <%= f.label :cargo %><br />
    <%= select(:vaga, :cargo_id, Cargo.all.collect {|c| [c.descricao, c.id]}, {:include_blank => 'Selecione um cargo'}) %>
  </div>
  <div class="field">
    <%= f.label :cidade %><br />
    <%= f.text_field :cidade %>
  </div>
  <div class="field">
    <%= f.label :salario %><br />
    <%= f.text_field :salario %>
  </div>
  <div class="field">
    <%= f.label :experiencia %><br />
    <%= select :vaga, :experiencia, EXPERIENCIA_TYPES.sort_by {|k,v| v.to_s } %>
  </div>
  <div class="field">
    <%= f.label :formacao %><br />
    <%= select :vaga, :formacao, FORMACAO_TYPES.sort_by {|k,v| v.to_s } %>
  </div>  
  <div class="field">
    <%= f.label :curso %><br />
    <%= select :vaga, :curso, CURSO_TYPES.sort %>
  </div>
  <div class="field">
    <%= f.label :data_limite %><br />
    <%= datetime_select("vaga", "data_limite", :default => 3.days.from_now) %>
  </div>
    
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
